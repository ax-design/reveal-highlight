{
    "compilerOptions": {
        "target": "es2018",
        "lib": ["dom", "dom.iterable", "esnext"],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "incremental": true,
        "outDir": "es",
        "importHelpers": false
    },
    "include": ["src"]
}
